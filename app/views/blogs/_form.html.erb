<div class="row justify-content-center">
  <div class="col-md-8">
    <%= form_with(model: blog, local: true) do |form| %>
      <% if blog.errors.any? %>
        <div class="alert alert-danger" role="alert">
          <h5 class="alert-heading"><%= pluralize(blog.errors.count, "error") %> prohibited this blog from being saved:</h5>
          <ul class="mb-0">
            <% blog.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-3">
        <%= form.label :title, "Blog Title", class: "form-label" %>
        <%= form.text_field :title, class: "form-control form-control-lg", placeholder: "Enter an engaging title..." %>
        <small class="text-muted">Make it catchy and descriptive!</small>
      </div>

      <div class="mb-4">
        <%= form.label :body, "Content", class: "form-label" %>
        <%= form.text_area :body, rows: 12, class: "form-control", placeholder: "Write your amazing story here..." %>
        <small class="text-muted">Markdown is supported for formatting.</small>
      </div>

      <div class="d-flex gap-2">
        <%= form.submit "Publish Now", class: "btn btn-primary btn-lg" %>
        <%= link_to "Cancel", blogs_path, class: "btn btn-outline-secondary btn-lg" %>
      </div>
    <% end %>
  </div>
</div>
