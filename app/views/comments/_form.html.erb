<div class="card border-0 shadow-sm">
  <div class="card-body">
    <h5 class="card-title mb-4">Leave a Comment</h5>

    <%= form_with(model: [blog, Comment.new], local: true) do |form| %>
      <% if form.object.errors.any? %>
        <div class="alert alert-danger small mb-3">
          <ul class="mb-0">
            <% form.object.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-3">
        <%= form.label :body, "Your Comment", class: "form-label" %>
        <%= form.text_area :body, rows: 4, class: "form-control", placeholder: "Share your thoughts..." %>
      </div>

      <div class="d-flex gap-2">
        <%= form.submit "Post Comment", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
